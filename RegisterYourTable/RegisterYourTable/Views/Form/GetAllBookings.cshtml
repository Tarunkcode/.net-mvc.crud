@model IEnumerable<TableRegistration.Services.BookTable>

@{
    ViewBag.Title = "GetAllBookings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>GetAllBookings</h2>

<p>
    @Html.ActionLink("Book Table", "SaveForm")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.YourName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Venue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Agreed)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfPleople)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ChoosenServices)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SecurityCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReachingTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bookingdate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.YourName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Venue)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Agreed)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfPleople)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ChoosenServices)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SecurityCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReachingTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bookingdate)
        </td>
        <td>
            @Html.ActionLink("Update", "Update", "Form" , routeValues: new { @tableId=item.tableId.ToString() }, htmlAttributes:new {@class = "text-white text-decoration-none" }) |
            @*@Html.ActionLink("Details", "Details", new { id=item.tableId.ToString() }) |*@
            @Html.ActionLink("Delete", "Delete","Form", routeValues: new { @tableId=item.tableId.ToString() }, htmlAttributes: new { @class = "text-white text-decoration-none" })
        </td>
    </tr>
}

</table>
